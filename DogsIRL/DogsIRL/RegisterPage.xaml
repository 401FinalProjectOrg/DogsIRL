<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DogsIRL.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
         <Label Text="Username" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name = "username" PlaceholderColor="Gray" FontSize="15" />
        <Label Text="Email" FontSize="20" HorizontalOptions="Center"/>
        <Entry PlaceholderColor="Gray" x:Name = "email" IsPassword="true" FontSize="15" />
            <Label Text="Password" FontSize="20" HorizontalOptions="Center"/>
        <Entry PlaceholderColor="Gray" x:Name = "password" IsPassword="true" FontSize="15" />
            <Label Text="Confirm Password" FontSize="20" HorizontalOptions="Center"/>
        <Entry PlaceholderColor="Gray" x:Name = "confirmPassword" IsPassword="true" FontSize="15" />
        <Button Text="Sign In"
                Clicked="OnButtonClicked" />
            </StackLayout>
    </ContentPage.Content>
</ContentPage>
